# Authentication settings
# Set to either "bearer_token" or "client_credentials"
AUTH_TYPE=bearer_token

# Bearer token authentication
AZURE_BEARER_TOKEN=your_bearer_token_here

# Client credentials authentication
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here

# Azure resource settings
AZURE_SUBSCRIPTION_ID=your_subscription_id_here
AZURE_RESOURCE_GROUP=your_resource_group_here

# Output settings
DEFAULT_EXPORT_PATH=your_export_path/azure_costs.csv

# Data filtering settings
# Default date range settings (YYYY-MM-DD format)
DEFAULT_FROM_DATE="2024-01-01"
DEFAULT_TO_DATE="2025-12-31"
# Service names to include by default (comma-separated)
DEFAULT_SERVICES="your_first_service, your_second_service"
# Include only resources with cost above this threshold (in USD)
COST_THRESHOLD="0.0"
# Maximum number of days per request (for large date ranges)
MAX_DAYS_PER_REQUEST="366"

# Request settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2